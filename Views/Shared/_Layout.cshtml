<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>EBookStore - Online BookStore</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Navbar styling */
        .navbar {
            border-bottom: 1px solid #e0e0e0;
        }

        .navbar-brand {
            font-size: 1.8rem;
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .nav-link {
            font-size: 1.1rem;
            font-weight: 500;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #0d6efd;
                background-color: rgba(0, 123, 255, 0.1);
                border-radius: 30px;
            }

        .navbar-toggler-icon {
            background-color: #fff;
        }

        .search-input {
            border-radius: 30px;
            padding: 8px 15px;
            border: 1px solid #ddd;
            transition: border-color 0.3s ease;
        }

            .search-input:focus {
                border-color: #0d6efd;
            }

        .navbar-nav .nav-item {
            margin-left: 20px;
        }

        /* Dropdown Menu Styling */
        .dropdown-menu {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Cart Icon */
        #cartCount {
            background-color: #dc3545;
            color: white;
            border-radius: 50%;
            padding: 5px 10px;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Home/Index">EBookStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="/Home/Index">
                            Home
                            <span class="visually-hidden">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Privacy">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Home/Contact">Contact Us</a>
                    </li>
                    @if (User.IsInRole(Roles.Admin.ToString()))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/AdminOperations/Dashboard">Dashboard</a>
                        </li>
                    }
                </ul>                
                <partial name="_LoginPartial" />
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="my-2">
            <partial name="_Notifications" />
        </div>
        @RenderBody()
    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script>
    loadCartCount();
    async function loadCartCount(){
            try{
                var response =await fetch(`/Cart/GetTotalItemInCart`);
                if(response.status == 200)
                {
                    var result = await response.json();
                    var cartCountEl = document.getElementById("cartCount");
                    cartCountEl.innerHTML = result;
                }
            }
            catch(err)
            {
                console.log(err);
            }
        }
</script>
@await RenderSectionAsync("Scripts", required: false)
</html>
